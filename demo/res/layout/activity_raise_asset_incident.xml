<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.maps.android.utils.activity.RaiseTicketActivity">

    <!-- TODO: Update blank fragment layout -->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/assetIdText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView23"
                app:layout_constraintLeft_toRightOf="@+id/textView23" />

            <EditText
                android:id="@+id/issueText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView22"
                app:layout_constraintLeft_toRightOf="@+id/textView22"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="Area Code"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:text="Equipment ID"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView28"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:text="Issue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23"
                android:layout_marginStart="8dp" />

            <EditText
                android:id="@+id/areaCodeText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView28"
                app:layout_constraintLeft_toRightOf="@+id/textView28" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:text="Issue Category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="141dp"
                android:layout_marginStart="141dp"
                android:layout_marginTop="55dp"
                android:text="SUBMIT"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/captureImageButton" />

            <Spinner
                android:id="@+id/issueCategorySpinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/issueText"
                app:layout_constraintLeft_toRightOf="@+id/textView29"
                android:layout_marginLeft="8dp" />

            <ImageButton
                android:id="@+id/captureImageButton"
                android:layout_width="135dp"
                android:layout_height="119dp"
                app:srcCompat="@drawable/takepic"
                android:layout_marginLeft="118dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="62dp"
                app:layout_constraintTop_toBottomOf="@+id/issueCategorySpinner" />
        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>

</LinearLayout>
