<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.maps.android.utils.demo.SurveyFragment"
    android:background="@drawable/bluegradient">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="serif-monospace"
            android:text="SAM Code"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:typeface="serif"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28" />

        <EditText
            android:id="@+id/survey_samcodetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:hint="e.g. 3SAM-01"
            android:inputType="textPersonName"
            android:singleLine="true"
            app:layout_constraintLeft_toRightOf="@+id/textView"
            android:layout_marginLeft="24dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="112dp"
            android:layout_height="47dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="43dp"
            android:elevation="12dp"
            app:layout_constraintLeft_toRightOf="@+id/textView22"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rsz_aerial" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="112dp"
            android:layout_height="47dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:elevation="12dp"
            app:layout_constraintLeft_toRightOf="@+id/textView28"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            app:srcCompat="@drawable/rsz_fibercable" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="112dp"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="false"
            android:elevation="11dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            app:srcCompat="@drawable/rsz_coppercable" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:src="@drawable/infalogo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="53dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.962"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/survey_submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="serif-monospace"
            android:text="SUBMIT"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/survey_samcodetext"
            app:layout_constraintVertical_bias="0.222"
            app:layout_constraintHorizontal_bias="0.458" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="112dp"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:background="@color/colorAccent"
            android:elevation="11dp"
            android:fontFamily="serif-monospace"
            android:paddingLeft="5dp"
            android:paddingTop="14dp"
            android:text="UG / Aerial"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="43dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="112dp"
            android:layout_height="47dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorAccent"
            android:elevation="11dp"
            android:fontFamily="serif-monospace"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Copper Equipment"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="112dp"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorAccent"
            android:elevation="12dp"
            android:fontFamily="serif-monospace"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="Fiber Equipment"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageButton
            android:id="@+id/ugstarbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_star_big_off"
            app:layout_constraintLeft_toRightOf="@+id/imageView5"
            android:layout_marginLeft="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="43dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/copperstarbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_star_big_off"
            app:layout_constraintLeft_toRightOf="@+id/textView23"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/ugstarbutton"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/fiberstarbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/copperstarbutton"
            app:srcCompat="@drawable/btn_star_big_off"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
